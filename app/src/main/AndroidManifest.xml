<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.formi.mediasoftnetworking">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.idSearch.IDSearchActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity android:name=".presentation.nameSearch.NameSearchActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".presentation.main.MainActivity"/>
        <activity android:name=".presentation.idSearch.searchByIdResult.SearchResultActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".presentation.idSearch.IDSearchActivity"/>
        <activity android:name=".presentation.idSearch.requests.RequestsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".presentation.idSearch.IDSearchActivity" />
        <activity android:name=".presentation.nameSearch.searchByNameResult.SearchResultByNameActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".presentation.nameSearch.NameSearchActivity" />
    </application>

</manifest>