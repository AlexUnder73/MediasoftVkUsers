<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.formi.mediasoftnetworking">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.mainActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.idSearchActivity.IDSearchActivity"
            android:parentActivityName=".presentation.mainActivity.MainActivity" />
        <activity android:name=".presentation.nameSearchActivity.NameSearchActivity"
            android:parentActivityName=".presentation.mainActivity.MainActivity"/>
        <activity android:name=".presentation.searchResultActivity.SearchResultActivity"
            android:parentActivityName=".presentation.idSearchActivity.IDSearchActivity"/>
        <activity android:name=".presentation.requestsActivity.RequestsActivity"
            android:parentActivityName=".presentation.mainActivity.MainActivity" />
    </application>

</manifest>